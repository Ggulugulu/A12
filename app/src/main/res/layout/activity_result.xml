<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f0f0"
    tools:context=".activity.ResultActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/result_01"
                android:layout_width="match_parent"
                android:layout_height="407dp"
                android:background="@drawable/result_back">
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/white_arrow"
                    android:layout_gravity="center"
                    android:layout_marginTop="29dp"
                    android:layout_marginLeft="17dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成绩分析"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_marginTop="26dp"
                    android:layout_marginLeft="147dp"/>
                <com.example.a12.view.RaderView
                    android:id="@+id/radar_view"
                    android:layout_below="@+id/iv_back"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/result_02"
                android:layout_marginTop="373dp"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/shape_white"
                android:layout_centerHorizontal="true">
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="14dp"
                        android:text="政治考试期末考试成绩数据分析情况"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">
                    <com.example.a12.view.RoundView
                        android:id="@+id/round_01"
                        android:layout_width="79dp"
                        android:layout_height="79dp" />
                    <com.example.a12.view.RoundView
                        android:id="@+id/round_02"
                        android:layout_width="79dp"
                        android:layout_height="79dp"
                        android:layout_marginLeft="18dp" />
                    <com.example.a12.view.RoundView
                        android:id="@+id/round_03"
                        android:layout_width="79dp"
                        android:layout_height="79dp"
                        android:layout_marginLeft="18dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:gravity="center"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="马克思主义的产生和发展"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>
                    <TextView
                        android:layout_width="90dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="物质世界和实践"
                        android:layout_marginLeft="5dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>
                    <TextView
                        android:layout_width="90dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="客观规律性和主观能动性"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#333333"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="21dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp">
                    <com.example.a12.view.RoundView
                        android:id="@+id/round_04"
                        android:layout_width="79dp"
                        android:layout_height="79dp" />
                    <com.example.a12.view.RoundView
                        android:id="@+id/round_05"
                        android:layout_width="79dp"
                        android:layout_height="79dp"
                        android:layout_marginLeft="18dp"/>
                    <com.example.a12.view.RoundView
                        android:id="@+id/round_06"
                        android:layout_width="79dp"
                        android:layout_height="79dp"
                        android:layout_marginLeft="18dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:layout_width="90dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="认识的本质及其规律"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>
                    <TextView
                        android:layout_width="90dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="真理与价值"
                        android:layout_marginLeft="5dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>
                    <TextView
                        android:layout_width="90dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="认识世界和改造世界的统一"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#333333"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>






</RelativeLayout>